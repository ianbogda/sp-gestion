<h1><%= h(@convocation.title) %> (<%= l(@convocation.date) %>)</h1>
<p>Lieu : <%= h(@convocation.place) %></p>
<p>Tenue : <%= h(@convocation.uniform.description) %></p>
<p>
  <%= link_to("Editer", edit_convocation_path(@convocation))%> - 
  <%= link_to("Supprimer", convocation_path(@convocation), :method => :delete, :confirm => "Êtes-vous sûr ?")%> - 
  <%= link_to("Imprimer", convocation_path(@convocation, :format => :pdf))%> -
  <%= link_to("Présences", edit_convocation_fireman_path(@convocation))%>
</p>
<h2>Convoqués</h2>
<table>
  <thead>
    <tr>
      <th>Grade</th>
      <th>Prénom</th>
      <th>Nom</th>
      <th>Présent ?</th>                  
    </tr>
  </thead>
  <tbody>
    <%-@convocation.convocation_firemen.group_by(&:status).each do |group, convocation_firemen| -%>
      <tr>
        <th colspan="4"><%= Fireman::STATUS.index(group) %></th>
      </tr>
      <%= render(convocation_firemen) %>
    <%- end -%>
  </tbody>
</table>