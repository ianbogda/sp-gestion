<%= image_tag(Gchart.pie_3d(:title      => "Heures sans pompiers", :size => '350x150',
                            :data       => [@periods_without_firemen, 7*24-@periods_without_firemen],
                            :labels     => [(@periods_without_firemen.to_s + " heures")])) %>

<%= image_tag(Gchart.pie_3d(:title      => "Occupation", :size => '250x150',
                            :data       => [@occupation, 100-@occupation],
                            :labels     => [(@occupation.to_s + "%")])) %>

<%= image_tag(Gchart.pie_3d(:title      => "Nombre de pompiers par heure en moyenne" , :size => '350x150',
                            :data       => [@firemen_period_average, @number_of_firemen - @firemen_period_average],
                            :labels     => [(@firemen_period_average.to_s + " pompiers")],
                            :max_value  => @number_of_firemen)) %>

<div class="row">
  <div class="col-md-6">
    <h5>5 heures avec le moins de personnel</h5>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Heure</th>
          <th>Nombre</th>
        </tr>
      </thead>
      <tbody>
        <%- @periods_less_firemen.each do |pf| -%>
          <tr>
            <td><%= l!(pf[0]) %></td>
            <td><%= pf[1] %></td>
          </tr>
        <%- end -%>
        <%- if @periods_less_firemen.blank? -%>
          <tr>
            <td colspan="2">Pas assez de données disponibles.</td>
          </tr>
        <%- end -%>
      </tbody>
    </table>
  </div>
  <div class="col-md-6">
    <h5>5 heures avec le plus de personnel</h5>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Heure</th>
          <th>Nombre</th>
        </tr>
      </thead>
      <tbody>
      <tbody>
        <%- @periods_more_firemen.each do |pf| -%>
          <tr>
            <td><%= l!(pf[0]) %></td>
            <td><%= pf[1] %></td>
          </tr>
        <%- end -%>
        <%- if @periods_less_firemen.blank? -%>
          <tr>
            <td colspan="2">Pas assez de données disponibles.</td>
          </tr>
        <%- end -%>
      </tbody>
    </table>
  </div>
</div>
