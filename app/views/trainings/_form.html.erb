<p>Les champs marqués d'une astérisque (*) sont obligatoires.</p>
<%= form_for(training, :html => { :class => 'form-horizontal' }) do |f| %>
  <fieldset>
    <div class="col-md-5">
      <div class="form-group">
        <%= f.label(:name, "Nom (*)", :class => 'col-md-5 control-label') %>
        <div class="col-md-7">
          <%= f.text_field(:name, :class => 'form-control') %>
          <%= error_message_on(:training, :name) %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label(:short_name, "Nom court (*)", :class => 'col-md-5 control-label') %>
        <div class="col-md-7">
          <%= f.text_field(:short_name, :class => 'form-control') %>
          <%= error_message_on(:training, :short_name) %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label(:description, "Description", :class => 'col-md-5 control-label') %>
        <div class="col-md-7">
          <%= f.text_area(:description, :rows => 5, :class => 'form-control') %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-7 col-md-offset-5">
          <%= submit_tag("Enregistrer", :class => 'btn btn-primary btn-lg') %> ou <%= link_to("Annuler", trainings_path) %>
        </div>
      </div>
    </div>
  </fieldset>
<%- end -%>
