<div class="block-title"><h4><%= @check_list.title %></h4></div>
<div class="clearfix"></div>
<div class="btn-toolbar pull-left">
  <div class="btn-group">
    <%= link_to(icon_label_text('icon-edit', 'Editer'),
                edit_check_list_path(@check_list),
                :class => 'btn btn-small') %>
    <%= link_to(icon_label_text('icon-remove', 'Supprimer'),
                check_list_path(@check_list),
                :method => :delete, :data => { :confirm => "Êtes-vous sûr ?" },
                :class => 'btn btn-small') %>
    <%= link_to(icon_label_text('icon-print', 'Imprimer'),
                check_list_path(@check_list, :format => :pdf),
                :class => 'btn btn-small') %>
  </div>
</div>
<div class="clearfix"></div>
<div class="block-title"><h5>Matériel</h5></div>
<div class="btn-toolbar pull-right">
  <div class="btn-group">
    <%= link_to(icon_label_text('icon-plus', 'Créer un nouveau matériel'),
                new_check_list_item_path(@check_list),
                :class => 'btn btn-small') %>
  </div>
</div>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Titre</th>
      <th>Emplacement</th>
      <th>Quantité</th>
      <th>Expire le</th>
    </tr>
  </thead>
  <tbody>
    <%= render(@check_list.items, :check_list => @check_list) || raw("<tr><td colspan='4'>Pas de matériel dans cette liste</td></tr>") %>
  </tbody>
</table>