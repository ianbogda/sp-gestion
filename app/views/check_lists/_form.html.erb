<p>Les champs marqués d'une astérisque (*) sont obligatoires.</p>
<%= form_for(check_list, :html => { :class => 'form-horizontal' }) do |f| %>
  <fieldset>
    <div class="control-group">
      <%= f.label(:title, "Titre (*)", :class => 'control-label') %>
      <div class="controls">
        <%= f.text_field(:title) %>
        <%= error_message_on(:check_list, :title) %>
      </div>
    </div>
    <div class="control-group">
      <div class="controls">
        <%= submit_tag("Enregistrer", :class => 'btn btn-primary btn-large') %> ou <%= link_to("Annuler", check_lists_path) %>
      </div>
    </div>
  </fieldset>
<%- end -%>