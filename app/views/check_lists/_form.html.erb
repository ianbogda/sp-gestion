<p>Les champs marqués d'une astérisque (*) sont obligatoires.</p>
<%= form_for(check_list, :html => { :class => 'form-horizontal' }) do |f| %>
  <fieldset>
    <div class="row">
      <div class="col-md-5">
        <div class="form-group">
          <%= f.label(:title, "Titre (*)", :class => 'col-md-5 control-label') %>
          <div class="col-md-7">
            <%= f.text_field(:title, :class => 'form-control') %>
            <%= error_message_on(:check_list, :title) %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-7 col-md-offset-5">
            <%= submit_tag("Enregistrer", :class => 'btn btn-primary btn-lg') %> ou <%= link_to("Annuler", check_lists_path) %>
          </div>
        </div>
      </div>
    </div>
  </fieldset>
<%- end -%>
