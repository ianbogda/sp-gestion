<div class="span-6 first">
  <p class="right"><%= link_to(image_tag("back/icons/add.png") + "&nbsp;Créer une nouvelle personne", new_fireman_path)%></p>
  <table>
    <thead>
      <tr>
        <th>Grade</th>
        <th>Prénom</th>
        <th>Nom</th>
        <th>Statut</th>
        <th>Fonction(s)</th>
      </tr>
    </thead>
    <tbody>
      <%= render(:partial => @firemen) || "<tr><td colspan='4'>Pas encore de personne !</td></tr>" %>
    </tbody>
  </table>
  <%= will_paginate(@firemen, :previous_label => "", :next_label => "") %>
</div>