<%- if controller.action_name != 'resigned' -%>
  <div class="btn-toolbar pull-right">
    <div class="btn-group">
      <%= link_to(icon_label_text('icon-plus', 'Créer une nouvelle personne'),
                  new_fireman_path,
                  :class => 'btn btn-small') %>
      <%= link_to(icon_label_text('icon-th', 'Synoptique des formations'),
                  trainings_firemen_path,
                  :class => 'btn btn-small') %>
      <%= link_to(icon_label_text('icon-camera', 'Trombinoscope'),
                  facebook_firemen_path,
                  :class => 'btn btn-small') %>
    </div>
  </div>
<%- end -%>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Grade</th>
      <th>Nom</th>
      <th>Prénom</th>
      <th>Statut</th>
      <th>Etiquette(s)</th>
    </tr>
  </thead>
  <tbody>
    <%= render(:partial => @firemen) || raw("<tr><td colspan='5'>Pas encore de personne !</td></tr>") %>
  </tbody>
</table>
<%= page_navigation_links(@firemen) %>