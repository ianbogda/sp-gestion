<div class="span-4 first">
  <%= image_tag(Gchart.bar( :title => "Interventions par heure (Total : #{@sum})", :size => '500x200',
                            :data => @data,
                            :axis_with_labels => 'x,y',
                            :axis_labels => [(0..23).to_a,
                                             [0, @data.max]],
                            :bar_width_and_spacing => [15,5],
                            :background => 'F5F5F5')) %>
</div>

<div class="span-2 clearfix">
  <table>
    <thead>
      <tr>
        <th>Heure</th>
        <th>Nombre</th>
      </tr>
    </thead>
    <tbody>
    <%- @data.each_with_index do |number, hour| -%>
      <tr>
        <td><%= hour %></td>
        <td><%= number %></td>
      </tr>
    <%- end -%>
    </tbody>
  </table>
</div>
<div class="clear"></div>