<div class="btn-toolbar pull-right">
  <div class="btn-group">
    <%= link_to(icon_label_text('icon-plus', 'Créer une nouvelle intervention'),
                new_intervention_path,
                :class => 'btn btn-small') %>
  </div>
</div>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Numéro</th>
      <th>Date</th>
      <th>Type</th>
      <th>Lieu/ville</th>
      <th>Véhicule(s)</th>
    </tr>
  </thead>
  <tbody>
    <%= render(:partial => @interventions) || raw("<tr><td colspan='5'>Pas encore d'intervention !</td></tr>") %>
  </tbody>
</table>
<%= page_navigation_links(@interventions) %>