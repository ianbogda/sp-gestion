<div class="row">
  <div class="span6">
    <%= image_tag(Gchart.pie_3d(:title => "Interventions par sous-type (Total : #{sum})", :size => '600x200',
                                :data => data.to_a.map { |label, value|
                                  value
                                },
                                :labels => data.to_a.map { |label, value|
                                  "#{label} (#{value.to_i})"
                                })) %>
  </div>
  <div class="span3">
    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th>Sous-type</th>
          <th>Nombre</th>
        </tr>
      </thead>
      <tbody>
      <%- data.each.map do |label, number| -%>
        <tr>
          <td><%= label %></td>
          <td><%= number %></td>
        </tr>
      <%- end -%>
      </tbody>
    </table>
  </div>
</div>